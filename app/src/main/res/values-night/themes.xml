<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="Theme.JojozQuizz" parent="Theme.MaterialComponents.NoActionBar">

		<item name="colorPrimary">@color/brand_red_dark</item>
		<item name="colorPrimaryVariant">@color/brand_red</item>
		<item name="colorOnPrimary">@color/white</item>
		<item name="colorSecondary">@color/brand_blue_dark</item>
		<item name="colorOnSecondary">@color/white</item>

		<item name="android:colorBackground">@color/background_night</item>
		<item name="colorOnBackground">@color/white</item>
		<item name="colorSurface">@color/background_night_lighter</item>
		<item name="colorOnSurface">@color/white</item>

		<item name="android:statusBarColor" tools:targetApi="1">@color/brand_red_dark</item>

		<item name="android:fontFamily">@font/caviar_font</item>

	</style>

	<style name="ActivityTitle">
		<item name="android:textColor">@color/brand_red_dark</item>
		<item name="android:textSize">30sp</item>
		<item name="android:layout_marginTop">30dp</item>
		<item name="android:layout_marginEnd">30dp</item>
		<item name="android:padding">20dp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="ReturnButton">
		<item name="android:layout_margin">16dp</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:layout_width">48dp</item>
		<item name="android:background">@drawable/rounded_corners_pattern</item>
		<item name="android:scaleType">centerInside</item>
	</style>
</resources>